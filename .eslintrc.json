{
  "env": {
    "browser": true,
    "es2021": true,
    "mocha": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "mocha"
  ],
  "globals": {
    "expect": true,
    "browser": true
  },
  "rules": {
    "indent": [
      "error",
      4,
      { "SwitchCase": 1 }
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "semi": [
      "error",
      "never"
    ],
    "space-infix-ops": [
      "error",
      { "int32Hint": true }
    ],
    "no-multiple-empty-lines": [
      "error",
      { "max": 1 }
    ],
    "no-console": [
      0
    ],
    "space-before-blocks" : [
      "error",
      "always"
    ],
    "eol-last": [
      "error",
      "always"
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "mocha/no-exclusive-tests": "error"
  }
}
